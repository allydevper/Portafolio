---
import "../../styles/global.css";

if (!Astro.locals.user) {
	return Astro.redirect("/login");
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Proyects Dashboard</title>
	</head>
	<body
		class="bg-gradient-to-br from-gray-900 to-gray-800 dark:bg-gradient-to-br dark:from-gray-900 dark:to-gray-800 font-sans antialiased text-white h-screen"
	>
		<div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 lg:px-2">
			<div class="text-center">
				<h2
					class="text-3xl font-bold text-white dark:text-white sm:text-4xl"
				>
					Gestor de <span class="text-pink-500 dark:text-pink-400"
						>Proyectos</span
					>
				</h2>
				<p class="mt-2 text-lg text-gray-400 dark:text-gray-400">
					Organiza los proyectos creados para mostrar en el
					portafolio.
				</p>
			</div>
			<div class="mt-12 grid grid-cols-1 gap-8 lg:grid-cols-3">
				<div
					class="bg-gray-800 dark:bg-gray-800 shadow-xl rounded-lg overflow-hidden lg:col-span-1"
				>
					<div class="px-6 py-4 bg-gray-700 dark:bg-gray-700">
						<h3
							class="text-xl font-semibold text-pink-400 dark:text-pink-300"
						>
							Añadir Proyecto Nuevo
						</h3>
					</div>
					<div class="px-6 py-6">
						<form id="projectForm" class="space-y-5">
							<div>
								<label
									for="projectName"
									class="block text-sm font-medium text-gray-300 dark:text-gray-300"
									>Nombre del Proyecto</label
								>
								<input
									type="text"
									id="projectName"
									required
									placeholder="Nombre del proyecto"
									class="mt-1 p-2 block w-full rounded-md border-gray-600 dark:border-gray-600 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm bg-gray-700 dark:bg-gray-700 text-white dark:text-white"
								/>
							</div>
							<div>
								<label
									for="projectUrl"
									class="block text-sm font-medium text-gray-300 dark:text-gray-300"
									>URL del Proyecto</label
								>
								<input
									type="url"
									id="projectUrl"
									placeholder="https://github.com/allydevper/Portafolio"
									class="mt-1 p-2 block w-full rounded-md border-gray-600 dark:border-gray-600 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm bg-gray-700 dark:bg-gray-700 text-white dark:text-white"
								/>
							</div>
							<div>
								<label
									for="projectDescription"
									class="block text-sm font-medium text-gray-300 dark:text-gray-300"
									>Descripción</label
								>
								<textarea
									id="projectDescription"
									placeholder="Breve descripción del proyecto"
									rows="3"
									class="mt-1 p-2 block w-full rounded-md border-gray-600 dark:border-gray-600 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm bg-gray-700 dark:bg-gray-700 text-white dark:text-white"
								></textarea>
							</div>
							<div>
								<label
									for="projectTechnologies"
									class="block text-sm font-medium text-gray-300 dark:text-gray-300"
									>Tecnologías</label
								>
								<select
									id="projectTechnologies"
									multiple
									class="mt-1 p-2 block w-full rounded-md border-gray-600 dark:border-gray-600 shadow-sm focus:border-pink-500 focus:ring-pink-500 sm:text-sm bg-gray-700 dark:bg-gray-700 text-white dark:text-white custom-select"
								>
									<option>HTML</option>
									<option>CSS</option>
									<option>JavaScript</option>
									<option>React</option>
									<option>Node.js</option>
									<option>Tailwind CSS</option>
									<option>Vue.js</option>
									<option>Angular</option>
									<option>Python</option>
									<option>Django</option>
									<option>Flask</option>
									<option>Ruby on Rails</option>
									<option>PHP</option>
									<option>Laravel</option>
									<option>SQL</option>
									<option>MongoDB</option>
									<option>Firebase</option>
									<option>Next.js</option>
									<option>Gatsby</option>
									<option>Svelte</option>
								</select>
								<p
									class="mt-1 text-sm text-gray-400 dark:text-gray-500"
								>
									Selecciona una de las tecnologías aplicables.
								</p>
							</div>
							<div class="mt-6">
								<button
									type="submit"
									class="relative inline-flex items-center justify-center p-0.5 mb-2 mr-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-pink-500 to-purple-500 hover:from-pink-600 hover:to-purple-600 focus:ring-4 focus:outline-none focus:ring-pink-200 dark:focus:ring-purple-800"
								>
									<span
										class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-gray-800 dark:bg-gray-800 rounded-md group-hover:bg-opacity-0 text-white"
										style="cursor: pointer;"
									>
										Crear Proyecto
									</span>
								</button>
							</div>
						</form>
					</div>
				</div>

				<div
					class="bg-gray-800 dark:bg-gray-800 shadow-xl rounded-lg overflow-hidden lg:col-span-2"
				>
					<div class="px-6 py-4 bg-gray-700 dark:bg-gray-700">
						<div class="flex justify-between items-center">
							<h3
								class="text-xl font-semibold text-pink-400 dark:text-pink-300"
							>
								Proyectos Existentes
							</h3>
							<div class="inline-flex gap-2">
								<button
									class="hover:bg-gray-600 dark:hover:bg-gray-700 text-gray-300 dark:text-gray-300 rounded-md text-sm font-medium focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 px-3 py-2 transition-colors duration-200"
								>
									Refrescar
								</button>
								<button
									class="hover:bg-gray-600 dark:hover:bg-gray-700 text-gray-300 dark:text-gray-300 rounded-md text-sm font-medium focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-opacity-50 px-3 py-2 transition-colors duration-200"
								>
									Ver Todos
								</button>
							</div>
						</div>
					</div>
					<div class="px-6 py-6 overflow-x-auto">
						<table id="projectTable" class="min-w-full table-auto">
							<thead
								class="bg-gray-600 dark:bg-gray-700 border-b border-gray-600 dark:border-gray-700"
							>
								<tr class="text-gray-300 dark:text-gray-300">
									<th
										class="py-3 px-4 font-semibold text-left"
										>NOMBRE</th
									>
									<th
										class="py-3 px-4 font-semibold text-left"
										>URL</th
									>
									<th
										class="py-3 px-4 font-semibold text-left"
										>TECNOLOGÍAS</th
									>
									<th
										class="py-3 px-4 font-semibold text-left"
										>DESCRIPCIÓN</th
									>
									<th
										class="py-3 px-4 font-semibold text-left"
										>FECHA CREACIÓN</th
									>
								</tr>
							</thead>
							<tbody>
								<tr
									class="hover:bg-gray-700 dark:hover:bg-gray-700 border-b border-gray-600 dark:border-gray-700"
								>
									<td
										class="py-4 px-4 font-medium text-white dark:text-white"
										>Proyecto Alfa <span
											class="text-sm text-pink-400 dark:text-pink-300"
											>(Personal)</span
										></td
									>
									<td class="py-4 px-4"
										><a
											href="#"
											class="text-pink-400 dark:text-pink-300 hover:underline"
											>https://alpha.ejemplo.com</a
										></td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>JavaScript, React, Node.js</td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>Breve descripción del proyecto alfa.</td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>2023-08-01</td
									>
								</tr>
								<tr
									class="hover:bg-gray-700 dark:hover:bg-gray-700 border-b border-gray-600 dark:border-gray-700"
								>
									<td
										class="py-4 px-4 font-medium text-white dark:text-white"
										>Proyecto Beta <span
											class="text-sm text-blue-400 dark:text-blue-300"
											>(Cliente)</span
										></td
									>
									<td class="py-4 px-4"
										><a
											href="#"
											class="text-pink-400 dark:text-pink-300 hover:underline"
											>https://beta.ejemplo.com</a
										></td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>Python, Django, SQL</td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>Otro proyecto, esta vez construido con
										Python.</td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>2023-08-15</td
									>
								</tr>
								<tr
									class="hover:bg-gray-700 dark:hover:bg-gray-700 border-b border-gray-600 dark:border-gray-700"
								>
									<td
										class="py-4 px-4 font-medium text-white dark:text-white"
										>Proyecto Gamma <span
											class="text-sm text-green-400 dark:text-green-300"
											>(Open Source)</span
										></td
									>
									<td class="py-4 px-4"
										><a
											href="#"
											class="text-pink-400 dark:text-pink-300 hover:underline"
											>https://gamma.ejemplo.com</a
										></td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>Vue.js, Firebase, Tailwind CSS</td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>Proyecto comunitario con foco en
										accesibilidad.</td
									>
									<td
										class="py-4 px-4 text-gray-400 dark:text-gray-400"
										>2023-09-01</td
									>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
