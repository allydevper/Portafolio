<style type="text/css">
	body {
		font-family: "Comfortaa", serif;
	}

	.bounce {
		animation: bounce-custom 1.3s infinite;
	}

	@keyframes bounce-custom {
		0%,
		100% {
			transform: translateY(5px);
		}

		50% {
			transform: translateY(-5px);
		}
	}

	@keyframes animate {
		0% {
			background-position: 0;
		}

		100% {
			background-position: 40px;
		}
	}

	#home {
		overflow: hidden;
	}

	svg {
		position: fixed;
		top: 0;
		left: 0;
		z-index: -1;
		display: block;
	}

	.border-svg {
		stroke: white;
		stroke-width: 2px;
		fill: none;
		stroke-linecap: round;
	}

	.direc90 {
		animation: grados90 9s infinite linear;
	}

	@keyframes grados90 {
		to {
			transform: translate(0px, 95.8675px);
		}
	}
</style>

